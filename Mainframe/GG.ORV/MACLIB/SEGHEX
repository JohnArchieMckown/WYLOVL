         MACRO                                                                  
&L       SEGHEX &LOC,&LEN,&SEGCB                                                
&L       PSET  @SEG                                                             
         MOVSTR @SEGLOC,@SEGLEN,&LOC,&LEN                                       
         SEGLD &SEGCB                                                           
         VCALL SEGHEX                                                           
         MEND                                                                   
