         MACRO                                                                  
&L       GETPARM &OUT,&FOUTLEN,&IN,&FINLEN,&REGS=                               
         LCLC  &R1,&R2,&OUTLEN,&INLEN                                           
&OUTLEN  SETC  '&FOUTLEN'                                                       
&INLEN   SETC  '&FINLEN'                                                        
         AIF   ('&OUTLEN' NE '').OUTSET                                         
&OUTLEN  SETC  'L'''.'&OUT'                                                     
.OUTSET  ANOP  ,                                                                
         AIF   ('&INLEN' NE '').INSET                                           
&INLEN   SETC  'L'''.'&IN'                                                      
.INSET   ANOP  ,                                                                
&R1      SETC  '&REGS(1)'                                                       
&R2      SETC  '&REGS(2)'                                                       
         LA    &R1,&OUT                                                         
         LA    &R1+1,&OUTLEN                                                    
         LA    &R2,&IN                                                          
         LA    &R2+1,&INLEN                                                     
         SYSCTL &R1,&R2,TYPE=PARM                                               
         MEND  ,                                                                
