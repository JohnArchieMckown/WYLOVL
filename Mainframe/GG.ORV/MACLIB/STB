         MACRO                                                                  
&L       STB   &LOC,&LEN,&SCALE                                                 
&L       PSET  @STB                                                             
         MOVSTR  @STBLOC,@STBLEN,&LOC,&LEN                                      
         PMOV    @STBSCAL,&SCALE,OP=LA                                          
         VCALL STBSTB                                                           
         MEND                                                                   
