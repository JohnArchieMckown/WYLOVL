         MACRO                                                                  
&L       BTX   &VAL,&LOC,&LEN                                                   
&L       PSET  @BTX                                                             
         PMOV    @BTXVAL,&VAL                                                   
         MOVSTR  @BTXLOC,@BTXLEN,&LOC,&LEN                                      
         VCALL BTXBTX                                                           
         MEND                                                                   
