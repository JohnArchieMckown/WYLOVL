;
;  sample program to translate active file
;
;  this program translates upper case to lower and
;  lower to upper.  it also translates digits into
;  the digit+1  (eg. 1 to 2, 8 to 9, etc)
;
;
;
xproc () begin

  ; set up translate  (upper to lower, digits to digits+1)
  in_chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
  in_chars = in_chars||'abcdefghijklmnopqrstuvwxyz1234567890'
  out_chars = 'abcdefghijklmnopqrstuvwxyz'
  out_chars = out_chars||'ABCDEFGHIJKLMNOPQRSTUVWXYZ2345678901'

  ; check for non null active file
  if (lines eq 0) begin
    comment Missing Active file
    xreturn
  end

  ; do all lines in range
  lno = first
  while (lno ne -1) begin
    newline = translate(line(lno),out_chars,in_chars)
    putline &(lno) &(newline)
    lno = lno_next(lno)
  end

end
