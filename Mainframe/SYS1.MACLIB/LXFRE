&LT1     SETC  'A'                      SET TO 'LA' FOR RX TYPE ADDR    08300000
         AGO   .OK20                    GO CHECK FORCE PARAMETER        08350000
.OK11    ANOP                                                           08400000
&LT1     SETC  'R'                      SET TO 'LR' FOR REG TYPE ADDR   08450000
&LXLV    SETC  '&LXLIST(1)'             EXTRACT REGISTER NAME           08500000
         AIF   (N'&LXLIST NE 1).ERR002  BR IF INVALID REG FORM          08520000
.********************************************************************** 08550000
.*       VALIDATE FORCE PARAMETER IF PRESENT                          * 08600000
.********************************************************************** 08650000
.OK20    ANOP                                                           08700000
&S(1)    SETB  (T'&FORCE NE 'O')        SET OPTION SPECIFIED BIT        08750000
         AIF   (T'&FORCE EQ 'O').OK21                                   08780000
&OPERAND SETC  'FORCE'                                                  08850000
&OPVAL   SETC  '&FORCE'                                                 08900000
         AIF   ('&FORCE' NE 'YES' AND '&FORCE' NE 'NO').ERR002          08950000
&P1      SETC  '&FORCE'                                                 09000000
         AGO   .OK99                                                    09050000
.OK21    ANOP  DEFAULT TO FORCE=NO IF FORCE NOT SPECIFIED               09100000
.*             UNLESS IT IS THE EXECUTE FORM                            09150000
&P1      SETC  'NO'                                                     09200000
.OK99    ANOP                                                           09250000
.********************************************************************** 09300000
.* MAP OPTIONS BITS INTO OPTIONS BYTE                                   09350000
.********************************************************************** 09400000
&B(1)    SETB  ('&P1' EQ 'YES')                                         09450000
&BOPTS   SETC  '&B(1)&B(2)&B(3)&B(4)&B(5)&B(6)&B(7)&B(8)'               09500000
.MAP1    AIF   (&S(1) NE 1).MAP2        IF S(1)-FORCE WAS NOT SET       09550000
         AIF   (&B(1) EQ 1).MAP1S       IF FORCE=YES WAS SPECIFIED      09600000
.*                                      FORCE=NO   WAS SPECIFIED        09650000
&N(1)    SETB  0                        ENABLE EXECUTE FORM TO CLR BIT  09700000
         AGO   .MAP2                                                    09750000
.MAP1S   ANOP                                                           09800000
&O(1)    SETB  1                        ENABLE EXECUTE FORM TO SET BIT  09850000
.MAP2    ANOP                                                           09900000
&OPTNI   SETA  128*&N(1)+64*&N(2)+32*&N(3)+16*&N(4)+8*&N(5)+4*&N(6)+2*&X09950000
               N(7)+&N(8)               OPTIONS NI MASK VALUE           10000000
&OPTOI   SETA  128*&O(1)+64*&O(2)+32*&O(3)+16*&O(4)+8*&O(5)+4*&O(6)+2*&X10050000
               O(7)+&O(8)               OPTIONS OI MASK VALUE           10100000
