.*       STANDARD FORM SPECIFIED                                      * 10400000
.********************************************************************** 10450000
&OPERAND SETC  'LXLIST'                                                 10500000
         AIF   ('&LXLV' EQ '').ERR001   REQUIRED OPERAND NOT SPECIFIED  10550000
.* GENERATE STANDARD FORM                                               10600000
&GNAME1  SETC  'IHB'.'&SYSNDX'.'1'                                      10650000
&GNAMEL  SETC  'IHB'.'&SYSNDX'.'L'                                      10700000
&LABL    DC    0H'0'                .LXFRE XM SERVICE PC                10750000
         STM   14,12,12(13)         .SAVE CALLER'S REGS                 10800000
         AIF   ('&LT1' EQ 'R').SF10     BR IF LXLIST WAS REG FORM       10830000
         LA    2,&LXLV              .GET ADDR OF LXLIST                 10860000
         ST    2,&GNAME1            .STORE LXLIST ADDR IN PARM LIST     10890000
         AGO   .SF12                                                    10950000
.SF10    ST    &LXLV,&GNAME1        .STORE LXLIST ADDR IN PARM LIST     11000000
.SF12    ANOP                                                           11050000
         CNOP  0,4                  .FORCE PARM LIST TO WORD BOUNDARY   11100000
         LA    1,*+8                .POINT REG1 TO PARM LIST            11150000
         B     &GNAMEL              .BRANCH AROUND PARM LIST            11175000
         DC    XL1'00'              .FORMAT BYTE                        11200000
         DC    BL1'&BOPTS'          .OPTIONS BYTE                       11250000
         DC    AL2(0)               .RESERVED                           11300000
&GNAME1  DC    A(0)                 .LXLIST ADDRESS                     11350000
&GNAMEL  ESAR  2                    .EXTRACT SASID                      11400000
         ST    2,16(,13)            .SAVE SASID IN REG 15 SLOT          11450000
         L     2,16(0,0)            .GET ADDR OF CVT                    14230000
         L     2,772(,2)            .GET ADDR OF SYSTEM FUNCTION TABLE  14270000
         L     2,4(,2)              .GET LX/EX FOR LXFRE                14310000
         PC    0(2)                 .PC TO LXFRE SERVICE                14420000
         L     2,16(,13)            .EXTRACT SAVED SASID                14446600
         SSAR  2                    .RESTORE SASID                      14473200
         LM    2,12,28(13)          .RESTORE REGS 2-12                  14500000
         L     14,12(,13)           .RESTORE REG 14                     14550000
         MEXIT                                                          14600000
.********************************************************************** 14700000
.CKMF2   ANOP                                                           14700700
