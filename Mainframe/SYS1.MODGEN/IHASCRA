*% PLSSCRA2: ;                                                          02050000
*  DCL 1 SCRA BASED (SDWAPARM)    /* SUP CNTRL RECOVERY AREA         */ 02100000
*        BDY(DWORD),                                                    02150000
*        2 SCRASCRA CHAR(4)       /* ACRONYM FOR SCRA                */ 02200000
*            BDY(WORD),                                                 02250000
*        2 SCRARTNP PTR(31),      /* RTM RETURN POINT ADDRESS        */ 02300000
*        2 SCRACSTK PTR(31),      /* CURRENT STACK POINTER           */ 02350000
*        2 SCRAFLGS BIT(32),      /* RECURSION AND ACTION FLAGS      */ 02400000
*          3 SCRARECF BIT(8),     /* RECURSION FLAGS                 */ 02450000
*            4 SCRAREC1 BIT(1),   /* FIRST LEVEL RECURSION           */ 02500000
*            4 SCRAREC2 BIT(1),   /* SECOND LEVEL RECURSION          */ 02550000
*            4 SCRARS02 BIT(1),   /* RESERVED                    @L2C*/ 02570000
*            4 SCRAXSRC BIT(1),   /* XES List Notification Recovery     02590000
*                                    Recursion Indicator.        @L2A*/ 02610000
*            4 SCRARS03 BIT(4),   /* RESERVED                    @L2C*/ 02630000
*          3 SCRAACTF BIT(8),     /* ACTION FLAGS                    */ 02650000
*            4 SCRAMTRM BIT(1),   /* MEMTERM INIDCATOR               */ 02700000
*            4 SCRAABTM BIT(1),   /* ABTERM INDICATOR                */ 02750000
*          3 SCRARS04 BIT(16),    /* RESERVED                        */ 02850000
*        2 SCRAWORK FIXED(31),    /* RECOVERY WORK AREA PTR          */ 02900000
*        2 SCRASUPR FIXED(31),    /* SUPERVISOR CONTROL WORD FROM PSA*/ 02950000
*        2 SCRAEND CHAR(0)        /* END OF SCRA                     */ 03000000
