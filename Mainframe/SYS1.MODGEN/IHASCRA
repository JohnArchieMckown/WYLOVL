* % GOTO PLSSCRA2; /*                                                   01000000
.*                                                                      01005000
.*********************************************************************  01010000
.*   CHANGE ACTIVITY =                                                  01015000
.*                                                                      01020000
.*  $01=OY27050  JBB3313  890417  PD16AG:  Encryption Asymmetric        01025000
.*                                         Feature Support              01030000
.*  $L1=PR313    JBB3313  891128  PD16EI:  SHOWHDR format complete      01031200
.*  $L2=SYSLKLCN HBB5510  910620  PD16Q4:  XES List Notification        01032400
.*                                         recursion bit                01033600
.*  $L3=DISPR    HBB5510  93xxxx  PD16EJ:  Dispatcher Restructure       01034000
.*                                         (Deletes only)               01034400
.*                                                                      01035000
.*********************************************************************  01040000
.*                                                                      01045000
SCRA     DSECT                                                          01050000
         DS    0D            SUPERVISOR CONTROL RECOVERY AREA           01100000
SCRASCRA DS    CL4           ACRONYM FOR SCRA                           01150000
SCRARTNP DS    A             RTM RETURN POINT ADDRESS                   01200000
SCRACSTK DS    A             CURRENT STACK POINTER                      01250000
SCRAFLGS DS    0F            RECURSION AND ACTION FLAGS       @G50DPXE  01300000
SCRARECF DS    B             RECURSION FLAGS                  @G50DPXE  01350000
SCRAREC1 EQU   X'80'         FIRST LEVEL RECURSION            @G50DPXE  01400000
SCRAREC2 EQU   X'40'         SECOND LEVEL RECURSION           @G50DPXE  01450000
SCRARS02 EQU   X'20'         RESERVED                         @G50DPXE  01500000
SCRAXSRC EQU   X'10'         XES List Notification Recovery Recurstion -01516600
                             indicator                             @L2A 01533200
SCRAACTF DS    B             ACTION FLAGS                     @G50DPXE  01550000
SCRAMTRM EQU   X'80'         MEMTERM INDICATOR                @G50DPXE  01600000
SCRAABTM EQU   X'40'         ABTERM INDICATOR                 @G50DPXE  01650000
SCRARS04 DS    H             RESERVED                         @G50DPXE  01750000
SCRAWORK DS    F             RECOVERY WORK AREA PTR                     01800000
SCRASUPR DS    F             SUPERVISOR CONTROL WORD FROM PSA           01850000
SCRAEND  DS    0D            END OF SCRA                                01900000
         MEND                                                           01950000
