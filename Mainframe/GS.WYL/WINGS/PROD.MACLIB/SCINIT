         MACRO                                                          00001000
&L       SCINIT &LOC,&LEN,&SCANWA                                       00002000
&L       SYSLR  1,&LOC,NULL=                                            00003000
         SYSLR  0,&LEN,NULL=                                            00004000
         SYSLR 15,&SCANWA,NULL=                                         00005000
         XCALL SCINIT                                                   00006000
         MEND                                                           00007000
