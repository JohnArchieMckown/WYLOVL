         MACRO                                                                  
&L       VERIFY &CC,&ID,&MSG,&MSGL,&REGS=ALL,&DUMP=YES,&RESTART=YES             
&L       IF    (NOT,&CC),BEGIN                                                  
         KAPUT &ID,&MSG,&MSGL,REGS=&REGS,DUMP=&DUMP,RESTART=&RESTART            
         END                                                                    
         MEND                                                                   
