REM WYL.GT.ATG.LIB1#OTHELLO1, CREATED 05/02/78                             1.
PRINT 'OTHELLO VERSION 1.5'                                              100.
REM                                                                      110.
REM                                                                      120.
REM                                                                      130.
REM             (C) DANIEL BRODSKY 1977                                  140.
REM                                                                      150.
REM          I AM ALLOWING THIS PROGRAM TO BE COPIED OR RUN              160.
REM          BY ANYONE UNDER THE FOLLOWING CONDITIONS:                   170.
REM                                                                      180.
REM          (1) THIS PROGRAM IS NOT TO BE USED FOR COMMERCIAL           190.
REM              PURPOSES WITHOUT THE PERMISSION OF THE AUTHOR.          200.
REM                                                                      210.
REM          (2) THIS COPYRIGHT NOTICE MUST BE ON EVERY COPY OR          220.
REM              REVISION OF THIS PROGRAM.                               230.
REM                                                                      240.
REM             -DANIEL BRODSKY (THE AUTHOR)                             250.
REM              138-09 76TH AVE.                                        260.
REM              FLUSHING, NY 11367                                      270.
PRINT                                                                    280.
PRINT 'DO YOU WANT INSTRUCTIONS? (Y/N) ';                                290.
INPUT R$                                                                 300.
IF R$ = 'N' THEN 400                                                     310.
PRINT 'THIS IS THE GAME OF OTHELLO'                                      320.
PRINT                                                                    330.
PRINT 'TO PLAY YOU INPUT THE X,Y COORDINATES OF THE POSITION'            340.
PRINT 'YOU WANT TO MOVE. IF YOU TYPE 99,9 THE BOARD WILL BE '            350.
PRINT 'PRINTED.'                                                         360.
PRINT 'X IS DOWN AND Y IS ACCROSS'                                       370.
PRINT                                                                    380.
PRINT 'IF YOU TYPE 22,9 ALL YOUR VALID MOVES WILL BE DISPLAYED'          390.
PRINT                                                                    400.
PRINT                                                                    410.
DIM T(10,10),M(20,4),D(10,10)                                            420.
DIM W(10,10),F(20,2),Z(7,2)                                              430.
DIM G(4,8),O(8)                                                          440.
REM INIT. DECISION MATRIX                                                450.
GOSUB 1670                                                               460.
REM INIT. THE BOARD                                                      470.
GOSUB 1930                                                               480.
F9 = 0                                                                   490.
PRINT 'WHO GOES FIRST (1 = COMPUTER, 2 = PLAYER)? ';                     500.
INPUT R                                                                  510.
PRINT 'DO YOU WANT THE BOARD DISPLAYED AFTER EACH MOVE (1 = Y, 2 = N)? ' 520.
INPUT Q9                                                                 530.
PRINT 'HOW DO YOU WANT THE BOARD DISPLAYED'                              540.
PRINT '(1 = LONG FORM, 2 = SHORT FORM)? ';                               550.
INPUT Q8                                                                 560.
IF Q9 = 1 THEN 590                                                       570.
GOSUB 2100                                                               580.
IF R = 2 THEN 640                                                        590.
T(5,4) = 1                                                               600.
T(5,5) = 1                                                               610.
PRINT 'COMPUTER MOVES : 4,3'                                             620.
PRINT '         FLIPS : 4,4'                                             630.
PRINT                                                                    640.
U1 = 2                                                                   650.
U2 = 1                                                                   660.
GOSUB 5140                                                               670.
IF P2 = 1 THEN 730                                                       680.
PRINT 'PLAYER HAS NO VALID MOVES'                                        690.
IF F9 = 1 THEN 1430                                                      700.
F9 = 1                                                                   710.
GOTO 1080                                                                720.
IF Q9 = 2 THEN 750                                                       730.
GOSUB 2100                                                               740.
PRINT 'PLAYER MOVES? ';                                                  750.
INPUT M1,M2                                                              760.
IF M1 <> 99 THEN 800                                                     770.
GOSUB 2100                                                               780.
GOTO 750                                                                 790.
IF M1 <> 22 THEN 890                                                     800.
PRINT "PLAYER'S MOVE     NUMBER OF FLIPS"                                810.
FOR I = 1 TO X STEP 1                                                    820.
M1 = M(I,1)-1                                                            830.
M2 = M(I,2)-1                                                            840.
PRINT ' ';M1;',';M2;'            ';M(I,3)                                850.
NEXT I                                                                   860.
PRINT                                                                    870.
GOTO 750                                                                 880.
M1 = M1 + 1                                                              890.
M2 = M2 + 2                                                              900.
F9 = 0                                                                   910.
REM CHECK TO SEE IF VALID MOVE                                           920.
REM SET USER1 TO PLAYER, AND USER2 TO COMPUTER                           930.
U1 = 2                                                                   940.
U2 = 1                                                                   950.
GOSUB 2500                                                               960.
IF P1 = 1 THEN 1000                                                      970.
PRINT 'INVALID MOVE, PLEASE TRY AGAIN...'                                980.
GOTO 640                                                                 990.
T(M1,M2) = 2                                                            1000.
FOR I = 1 TO L STEP 1                                                   1010.
T(F(I,1),F(I,2)) = 2                                                    1020.
F(I,1) = F(I,1)-1                                                       1030.
F(I,2) = F(I,2)-1                                                       1040.
PRINT 'FLIPS   : ';F(I,1);',';F(I,2)                                    1050.
NEXT I                                                                  1060.
