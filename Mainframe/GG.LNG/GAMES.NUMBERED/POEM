REM WYL.GA.PAB.BASIC.GAMES#POEM, CREATED 04/14/76                          1.
DIM W$(9),H$(9)                                                           10.
X=-1                                                                      20.
K=K+1                                                                     30.
IF K>9 THEN 130                                                           40.
FOR I=1 TO 9                                                              50.
READ W$(I)                                                                60.
NEXT I                                                                    70.
N=RND(X)                                                                  80.
N=INT(9*N+1)                                                              90.
IF N=0 THEN 50                                                           100.
H$(K)=W$(N)                                                              110.
GO TO 30                                                                 120.
PRINT 'NOW ';H$(1);' AS THE ';H$(2)                                      130.
PRINT H$(3);' ';H$(4);' ';H$(5);' IN THE ';H$(6)                         140.
PRINT 'AND ';H$(8);', THE ';H$(9);' HAS ';H$(7)                          150.
STOP                                                                     160.
DATA 'WHITE','GLOWING','FRESH','MOTLEY','BRILLIANT','GAY','ENDLESS','HAZ 170.
DATA 'LEAF','FOG','RIVER','EARTH','SHADOWS','TWILIGHT','SEA','FIELDS','L 180.
DATA 'WATCH','GREET','VISIT','KISS','PLUCK','SING TO','SNIFF','IMAGINE', 190.
DATA 'TRANSPARENT','MAGICAL','EXPLOSIVE','JEWELLED','SLIMY','PALE','RUGG 200.
DATA 'ACORNS','BLOSSOMS','ICICLES','STARS','GLOW-WORMS','PEBBLES','POPPI 210.
DATA 'FLOWERS','GRASS','CAVES','CLOUDS','MORNING','FIRE','DUNES','WATERS 220.
DATA 'VANISHED','DIED','FALLEN','MELTED','CRUMBLED','CRACKED','APPEARED' 230.
DATA 'WOOSH','BANG','ABRACADABRA','FLASH','SUDDENLY','CRASH','SWEEP','CL 240.
DATA 'RAIN','BUTTERFLY','MIRROR','SNOW','MOUNTAIN','TREE','DRAGON','RAIN 250.
